        // Create a match card with real data
        function createRealMatchCard(match) {
            const prediction = match.prediction;
            const hbOdds = match.odds.hollywoodbets;
            const bwOdds = match.odds.betway;
            
            let predictionText = '';
            let badgeClass = '';
            
            switch (prediction.outcome) {
                case 'H':
                    predictionText = 'Home Win';
                    badgeClass = 'badge-home-win';
                    break;
                case 'A':
                    predictionText = 'Away Win';
                    badgeClass = 'badge-away-win';
                    break;
                default:
                    predictionText = 'Draw';
                    badgeClass = 'badge-draw';
            }

            // Find best odds
            const bestHome = hbOdds.home_win > bwOdds.home_win ? 
                { odds: hbOdds.home_win, bookmaker: 'Hollywoodbets' } : 
                { odds: bwOdds.home_win, bookmaker: 'Betway' };
                
            const bestDraw = hbOdds.draw > bwOdds.draw ? 
                { odds: hbOdds.draw, bookmaker: 'Hollywoodbets' } : 
                { odds: bwOdds.draw, bookmaker: 'Betway' };
                
            const bestAway = hbOdds.away_win > bwOdds.away_win ? 
                { odds: hbOdds.away_win, bookmaker: 'Hollywoodbets' } : 
                { odds: bwOdds.away_win, bookmaker: 'Betway' };

            return `
                <div class="match-card fade-in" data-match-id="${match.id}">
                    <div class="match-header">
                        <div class="match-teams">
                            <div class="team">
                                <span class="team-name">${match.home_team}</span>
                            </div>
                            <div class="vs">VS</div>
                            <div class="team home">
                                <span class="team-name">${match.away_team}</span>
                            </div>
                        </div>
                        <div class="match-league">${match.league}</div>
                    </div>
                    
                    <div class="odds-comparison">
                        <div class="bookmaker-odds">
                            <span class="bookmaker-name">Hollywoodbets</span>
                            <div>
                                <span class="odds-value ${bestHome.bookmaker === 'Hollywoodbets' ? 'best' : ''}">${hbOdds.home_win}</span>
                                <span class="odds-value ${bestDraw.bookmaker === 'Hollywoodbets' ? 'best' : ''}">${hbOdds.draw}</span>
                                <span class="odds-value ${bestAway.bookmaker === 'Hollywoodbets' ? 'best' : ''}">${hbOdds.away_win}</span>
                            </div>
                        </div>
                        <div class="bookmaker-odds">
                            <span class="bookmaker-name">Betway</span>
                            <div>
                                <span class="odds-value ${bestHome.bookmaker === 'Betway' ? 'best' : ''}">${bwOdds.home_win}</span>
                                <span class="odds-value ${bestDraw.bookmaker === 'Betway' ? 'best' : ''}">${bwOdds.draw}</span>
                                <span class="odds-value ${bestAway.bookmaker === 'Betway' ? 'best' : ''}">${bwOdds.away_win}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="match-prediction">
                        <div class="prediction-header">
                            <span class="prediction-badge ${badgeClass}">${predictionText}</span>
                            <span class="confidence-score">${Math.round(prediction.confidence * 100)}% confidence</span>
                        </div>
                        <div class="confidence-meter">
                            <div class="confidence-level" style="width: ${prediction.confidence * 100}%"></div>
                        </div>
                    </div>
                    
                    <div class="recommended-bets">
                        <strong>AI Recommendations:</strong>
                        <div class="bet-tags">
                            ${prediction.recommendations.map(rec => 
                                `<span class="bet-tag">${rec}</span>`
                            ).join('')}
                        </div>
                    </div>
                    
                    <div class="match-details">
                        <div class="detail-item">
                            <i class="fas fa-calendar"></i>
                            ${new Date(match.start_time).toLocaleDateString()}
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt"></i>
                            ${match.venue}
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-clock"></i>
                            ${new Date(match.start_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                        </div>
                    </div>
                    
                    <div class="match-actions">
                        <a href="https://www.hollywoodbets.net/" target="_blank" class="btn btn-secondary btn-small">
                            <i class="fas fa-external-link-alt"></i> Hollywoodbets
                        </a>
                        <a href="https://www.betway.co.za/" target="_blank" class="btn btn-secondary btn-small">
                            <i class="fas fa-external-link-alt"></i> Betway
                        </a>
                    </div>
                </div>
            `;
        }

        // Display advanced predictions
        function displayAdvancedPredictions(matches) {
            // Filter for Win + BTTS predictions
            const winBttsMatches = matches.filter(match => 
                match.prediction.recommendations.includes('Home Win') || 
                match.prediction.recommendations.includes('Away Win') &&
                match.prediction.recommendations.includes('Both Teams to Score')
            ).slice(0, 3);

            // Filter for Draw + BTTS predictions
            const drawBttsMatches = matches.filter(match => 
                match.prediction.recommendations.includes('Draw') &&
                match.prediction.recommendations.includes('Both Teams to Score')
            ).slice(0, 3);

            // Display Win + BTTS predictions
            const winBttsContainer = document.getElementById('winBttsPredictions');
            if (winBttsMatches.length > 0) {
                winBttsContainer.innerHTML = winBttsMatches.map(match => `
                    <div class="prediction-item">
                        <div class="prediction-match">${match.home_team} vs ${match.away_team}</div>
                        <div class="prediction-details">
                            <span class="prediction-type">${match.prediction.outcome === 'H' ? 'Home Win' : 'Away Win'}</span>
                            <span class="probability">BTTS: ${Math.round(match.odds.hollywoodbets.both_teams_to_score * 100 - 100)}%</span>
                            <span class="odds">Odds: ${match.odds.hollywoodbets.both_teams_to_score}</span>
                        </div>
                        <div class="confidence">
                            <div class="confidence-bar">
                                <div class="confidence-fill" style="width: ${match.prediction.confidence * 100}%"></div>
                            </div>
                            <span>${Math.round(match.prediction.confidence * 100)}% confidence</span>
                        </div>
                    </div>
                `).join('');
            } else {
                winBttsContainer.innerHTML = '<p class="no-predictions">No strong Win + BTTS predictions found.</p>';
            }

            // Display Draw + BTTS predictions
            const drawBttsContainer = document.getElementById('drawBttsPredictions');
            if (drawBttsMatches.length > 0) {
                drawBttsContainer.innerHTML = drawBttsMatches.map(match => `
                    <div class="prediction-item">
                        <div class="prediction-match">${match.home_team} vs ${match.away_team}</div>
                        <div class="prediction-details">
                            <span class="prediction-type">Draw</span>
                            <span class="probability">BTTS: ${Math.round(match.odds.hollywoodbets.both_teams_to_score * 100 - 100)}%</span>
                            <span class="odds">Odds: ${match.odds.hollywoodbets.both_teams_to_score}</span>
                        </div>
                        <div class="confidence">
                            <div class="confidence-bar">
                                <div class="confidence-fill" style="width: ${match.prediction.confidence * 100}%"></div>
                            </div>
                            <span>${Math.round(match.prediction.confidence * 100)}% confidence</span>
                        </div>
                    </div>
                `).join('');
            } else {
                drawBttsContainer.innerHTML = '<p class="no-predictions">No strong Draw + BTTS predictions found.</p>';
            }
        }

        // Update data summary
        function updateDataSummary(data) {
            // Update various summary elements
            document.getElementById('live-matches').textContent = data.matches.length;
        }

        // Update source status
        function updateSourceStatus(status) {
            const hbStatus = document.getElementById('hb-status');
            const bwStatus = document.getElementById('bw-status');
            const statusDots = document.querySelectorAll('.status-dot');
            
            if (status === 'connected') {
                hbStatus.textContent = 'Connected';
                bwStatus.textContent = 'Connected';
                statusDots.forEach(dot => {
                    dot.classList.remove('disconnected');
                    dot.classList.add('connected');
                });
            } else if (status === 'fetching') {
                hbStatus.textContent = 'Fetching...';
                bwStatus.textContent = 'Fetching...';
            } else if (status === 'error') {
                hbStatus.textContent = 'Error';
                bwStatus.textContent = 'Error';
                statusDots.forEach(dot => {
                    dot.classList.remove('connected');
                    dot.classList.add('disconnected');
                });
            }
        }

        // Log activity
        function logActivity(message) {
            const timestamp = new Date().toLocaleTimeString();
            const logContainer = document.getElementById('activityLog');
            
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.innerHTML = `
                <span class="log-time">${timestamp}</span>
                <span class="log-message">${message}</span>
            `;

            logContainer.prepend(logEntry);
            
            // Keep only last 10 entries
            while (logContainer.children.length > 10) {
                logContainer.removeChild(logContainer.lastChild);
            }
        }

        // Filter matches based on selection
        function filterMatches(filter) {
            const matches = document.querySelectorAll('.match-card');
            
            matches.forEach(match => {
                match.style.display = 'block';
                
                if (filter === 'high-confidence') {
                    const confidenceText = match.querySelector('.confidence-score').textContent;
                    const confidence = parseInt(confidenceText);
                    if (confidence < 70) match.style.display = 'none';
                } else if (filter === 'win-btts') {
                    const bets = match.querySelectorAll('.bet-tag');
                    let hasWin = false;
                    let hasBtts = false;
                    
                    bets.forEach(bet => {
                        if (bet.textContent.includes('Win')) hasWin = true;
                        if (bet.textContent.includes('Both Teams')) hasBtts = true;
                    });
                    
                    if (!hasWin || !hasBtts) match.style.display = 'none';
                } else if (filter === 'draw-btts') {
                    const bets = match.querySelectorAll('.bet-tag');
                    let hasDraw = false;
                    let hasBtts = false;
                    
                    bets.forEach(bet => {
                        if (bet.textContent.includes('Draw')) hasDraw = true;
                        if (bet.textContent.includes('Both Teams')) hasBtts = true;
                    });
                    
                    if (!hasDraw || !hasBtts) match.style.display = 'none';
                } else if (filter === 'value-bets') {
                    // Simple value bet detection based on odds difference
                    const oddsElements = match.querySelectorAll('.odds-value');
                    let hasValue = false;
                    
                    // Check if there's a significant difference between bookmakers
                    const hollywoodbetsOdds = Array.from(oddsElements).slice(0, 3).map(el => parseFloat(el.textContent));
                    const betwayOdds = Array.from(oddsElements).slice(3, 6).map(el => parseFloat(el.textContent));
                    
                    for (let i = 0; i < 3; i++) {
                        if (Math.abs(hollywoodbetsOdds[i] - betwayOdds[i]) > 0.3) {
                            hasValue = true;
                            break;
                        }
                    }
                    
                    if (!hasValue) match.style.display = 'none';
                }
            });
        }

        // Scroll to custom prediction section
        function scrollToCustom() {
            document.getElementById('custom').scrollIntoView({ behavior: 'smooth' });
        }

        // Analyze custom match
        function analyzeCustomMatch() {
            const homeTeam = document.getElementById('homeTeam').value;
            const awayTeam = document.getElementById('awayTeam').value;
            const league = document.getElementById('league').value;
            const venue = document.getElementById('venue').value;
            
            if (!homeTeam || !awayTeam) {
                alert('Please enter both team names');
                return;
            }
            
            // Show loading state
            const resultDiv = document.getElementById('predictionResult');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = `
                <div class="loading-state">
                    <div class="loading-spinner"></div>
                    <p>AI is analyzing ${homeTeam} vs ${awayTeam}...</p>
                </div>
            `;
            
            // Simulate AI analysis
            setTimeout(() => {
                generateCustomPrediction(homeTeam, awayTeam, league, venue);
            }, 2000);
        }

        // Generate custom prediction
        function generateCustomPrediction(homeTeam, awayTeam, league, venue) {
            // Simulate AI analysis with realistic probabilities
            const homeWinProb = 40 + Math.random() * 30;
            const drawProb = 20 + Math.random() * 20;
            const awayWinProb = 100 - homeWinProb - drawProb;
            
            // Determine most likely outcome
            let outcome, confidence;
            if (homeWinProb >= drawProb && homeWinProb >= awayWinProb) {
                outcome = 'HOME_WIN';
                confidence = homeWinProb;
            } else if (awayWinProb >= homeWinProb && awayWinProb >= drawProb) {
                outcome = 'AWAY_WIN';
                confidence = awayWinProb;
            } else {
                outcome = 'DRAW';
                confidence = drawProb;
            }
            
            // Generate factors
            const factors = [
                { name: 'Team Form', value: 70 + Math.random() * 25, impact: 'HIGH' },
                { name: 'Head-to-Head', value: 50 + Math.random() * 40, impact: 'MEDIUM' },
                { name: 'Home Advantage', value: venue === 'home' ? 80 : 50, impact: 'HIGH' },
                { name: 'Attack Strength', value: 60 + Math.random() * 35, impact: 'HIGH' },
                { name: 'Defense Quality', value: 55 + Math.random() * 40, impact: 'MEDIUM' },
                { name: 'Recent Performance', value: 65 + Math.random() * 30, impact: 'HIGH' },
                { name: 'Player Injuries', value: 20 + Math.random() * 70, impact: 'MEDIUM' },
                { name: 'Motivation Level', value: 70 + Math.random() * 25, impact: 'MEDIUM' }
            ];
            
            // Generate recommendations
            const recommendations = [];
            if (outcome === 'HOME_WIN') recommendations.push('Home Win');
            if (outcome === 'AWAY_WIN') recommendations.push('Away Win');
            if (outcome === 'DRAW') recommendations.push('Draw');
            
            // Both teams to score probability
            const bttsProb = 40 + Math.random() * 50;
            if (bttsProb > 50) recommendations.push('Both Teams to Score');
            
            // Over/under probability
            const over25Prob = 50 + Math.random() * 40;
            if (over25Prob > 60) recommendations.push('Over 2.5 Goals');
            
            // Update UI with results
            displayCustomPrediction(
                homeTeam, awayTeam, 
                homeWinProb, drawProb, awayWinProb, 
                confidence, outcome, recommendations, factors
            );
            
            // Log the analysis
            logActivity(`Custom analysis: ${homeTeam} vs ${awayTeam} - ${outcome.replace('_', ' ')} predicted`);
        }

        // Display custom prediction results
        function displayCustomPrediction(homeTeam, awayTeam, homeWinProb, drawProb, awayWinProb, confidence, outcome, recommendations, factors) {
            const resultDiv = document.getElementById('predictionResult');
            
            // Update result title
            document.getElementById('resultTitle').textContent = `${homeTeam} vs ${awayTeam}`;
            document.getElementById('confidenceScore').textContent = `${Math.round(confidence)}% Confidence`;
            
            // Update probabilities
            document.getElementById('homeWinValue').textContent = `${Math.round(homeWinProb)}%`;
            document.getElementById('drawValue').textContent = `${Math.round(drawProb)}%`;
            document.getElementById('awayWinValue').textContent = `${Math.round(awayWinProb)}%`;
            
            // Highlight most probable outcome
            document.getElementById('homeWinCard').classList.remove('active');
            document.getElementById('drawCard').classList.remove('active');
            document.getElementById('awayWinCard').classList.remove('active');
            
            if (outcome === 'HOME_WIN') {
                document.getElementById('homeWinCard').classList.add('active');
            } else if (outcome === 'DRAW') {
                document.getElementById('drawCard').classList.add('active');
            } else {
                document.getElementById('awayWinCard').classList.add('active');
            }
            
            // Update recommendations
            const recommendationTags = document.getElementById('recommendationTags');
            recommendationTags.innerHTML = '';
            recommendations.forEach(rec => {
                const tag = document.createElement('span');
                tag.className = 'bet-tag';
                tag.textContent = rec;
                recommendationTags.appendChild(tag);
            });
            
            // Update factors
            const factorsGrid = document.getElementById('factorsGrid');
            factorsGrid.innerHTML = '';
            factors.forEach(factor => {
                const factorCard = document.createElement('div');
                factorCard.className = 'factor-card';
                
                const impactClass = factor.impact === 'HIGH' ? 'value-positive' : 
                                  factor.impact === 'MEDIUM' ? 'value-warning' : 'value-negative';
                
                factorCard.innerHTML = `
                    <div class="factor-value ${impactClass}">${Math.round(factor.value)}%</div>
                    <div class="factor-label">${factor.name}</div>
                    <div style="font-size: 0.7rem; color: var(--text-secondary); margin-top: 0.3rem;">${factor.impact} Impact</div>
                `;
                
                factorsGrid.appendChild(factorCard);
            });
            
            // Show the result
            resultDiv.style.display = 'block';
        }
    </script>
</body>
</html>
